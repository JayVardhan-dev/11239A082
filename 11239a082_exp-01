        "def tower(n, source, aux, target):\n",
        "    if n == 1:\n",
        "        print(f\"move disk 1 from {source} to {target}\")  # Add space after 'from' and before 'to'\n",
        "        return\n",
        "    tower(n - 1, source, target, aux)\n",
        "    print(f\"move disk {n} from {source} to {target}\")  # Add space after 'from' and before 'to'\n",
        "    tower(n - 1, aux, source, target)\n",
        "\n",
        "# Change '_name_' to '__name__'\n",
        "if __name__ == \"__main__\":\n",
        "    n = int(input(\"enter a number\"))\n",
        "    tower(n, 'a', 'b', 'c')"
